{
  "name": "chatbot-app",
  "version": "1.0.0",
  "description": "Professional AI Chatbot with file upload and web search capabilities",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && python simple_main.py",
    "server-dev": "cd server && python simple_main.py",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && pip install -r requirements.txt",
    "setup-python": "cd server && pip install -r requirements.txt"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0"
  }
}
